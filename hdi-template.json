{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "0.9.0.0",
    "parameters": {
        "clusterName": {
            "type": "String",
            "metadata": {
                "description": "The name of the HDInsight cluster to create."
            }
        },
        "clusterLoginUserName": {
            "defaultValue": "admin",
            "type": "String",
            "metadata": {
                "description": "These credentials can be used to submit jobs to the cluster and to log into cluster dashboards."
            }
        },
        "clusterLoginPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        },
        "location": {
            "defaultValue": "eastus",
            "type": "String",
            "metadata": {
                "description": "The location where all azure resources will be deployed."
            }
        },
        "clusterVersion": {
            "defaultValue": "4.0",
            "type": "String",
            "metadata": {
                "description": "HDInsight cluster version."
            }
        },
        "clusterWorkerNodeCount": {
            "defaultValue": 4,
            "type": "Int",
            "metadata": {
                "description": "The number of nodes in the HDInsight cluster."
            }
        },
        "clusterKind": {
            "defaultValue": "KAFKA",
            "type": "String",
            "metadata": {
                "description": "The type of the HDInsight cluster to create."
            }
        },
        "sshUserName": {
            "defaultValue": "sshuser",
            "type": "String",
            "metadata": {
                "description": "These credentials can be used to remotely access the cluster."
            }
        },
        "sshPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.HDInsight/clusters",
            "apiVersion": "2015-03-01-preview",
            "name": "[parameters('clusterName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "Microsoft.Storage/storageAccounts/kafkaflowshdistorage"
            ],
            "tags": {},
            "properties": {
                "clusterVersion": "[parameters('clusterVersion')]",
                "osType": "Linux",
                "tier": "standard",
                "clusterDefinition": {
                    "kind": "[parameters('clusterKind')]",
                    "componentVersion": {
                        "Kafka": "2.1"
                    },
                    "configurations": {
                        "gateway": {
                            "restAuthCredential.isEnabled": true,
                            "restAuthCredential.username": "[parameters('clusterLoginUserName')]",
                            "restAuthCredential.password": "[parameters('clusterLoginPassword')]"
                        }
                    }
                },
                "storageProfile": {
                    "storageaccounts": [
                        {
                            "name": "kafkaflowshdistorage.blob.core.windows.net",
                            "isDefault": true,
                            "container": "kafka-flows",
                            "key": "[listKeys('Microsoft.Storage/storageAccounts/kafkaflowshdistorage', '2015-05-01-preview').key1]"
                        }
                    ]
                },
                "computeProfile": {
                    "roles": [
                        {
                            "autoscale": null,
                            "name": "headnode",
                            "minInstanceCount": 1,
                            "targetInstanceCount": 2,
                            "hardwareProfile": {
                                "vmSize": "Standard_D4_V2"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('sshUserName')]",
                                    "password": "[parameters('sshPassword')]"
                                },
                                "windowsOperatingSystemProfile": null
                            },
                            "virtualNetworkProfile": {
                                "id": "/subscriptions/4bdb63d7-b6a0-47f8-b0bf-a78afa5ad75e/resourceGroups/cloud-dev-flows/providers/Microsoft.Network/virtualNetworks/vnet-flows",
                                "subnet": "/subscriptions/4bdb63d7-b6a0-47f8-b0bf-a78afa5ad75e/resourceGroups/cloud-dev-flows/providers/Microsoft.Network/virtualNetworks/vnet-flows/subnets/default"
                            },
                            "scriptActions": [],
                            "dataDisksGroups": null
                        },
                        {
                            "autoscale": null,
                            "name": "workernode",
                            "targetInstanceCount": 4,
                            "hardwareProfile": {
                                "vmSize": "Standard_D3_V2"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('sshUserName')]",
                                    "password": "[parameters('sshPassword')]"
                                },
                                "windowsOperatingSystemProfile": null
                            },
                            "virtualNetworkProfile": {
                                "id": "/subscriptions/4bdb63d7-b6a0-47f8-b0bf-a78afa5ad75e/resourceGroups/cloud-dev-flows/providers/Microsoft.Network/virtualNetworks/vnet-flows",
                                "subnet": "/subscriptions/4bdb63d7-b6a0-47f8-b0bf-a78afa5ad75e/resourceGroups/cloud-dev-flows/providers/Microsoft.Network/virtualNetworks/vnet-flows/subnets/default"
                            },
                            "scriptActions": [],
                            "dataDisksGroups": [
                                {
                                    "disksPerNode": 2
                                }
                            ]
                        },
                        {
                            "autoscale": null,
                            "name": "zookeepernode",
                            "minInstanceCount": 1,
                            "targetInstanceCount": 3,
                            "hardwareProfile": {
                                "vmSize": "Standard_A5"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('sshUserName')]",
                                    "password": "[parameters('sshPassword')]"
                                },
                                "windowsOperatingSystemProfile": null
                            },
                            "virtualNetworkProfile": {
                                "id": "/subscriptions/4bdb63d7-b6a0-47f8-b0bf-a78afa5ad75e/resourceGroups/cloud-dev-flows/providers/Microsoft.Network/virtualNetworks/vnet-flows",
                                "subnet": "/subscriptions/4bdb63d7-b6a0-47f8-b0bf-a78afa5ad75e/resourceGroups/cloud-dev-flows/providers/Microsoft.Network/virtualNetworks/vnet-flows/subnets/default"
                            },
                            "scriptActions": [],
                            "dataDisksGroups": null
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-05-01-preview",
            "name": "kafkaflowshdistorage",
            "location": "eastus",
            "properties": {
                "accountType": "Standard_LRS"
            }
        }
    ]
}